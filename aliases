# Directory navigation #
alias ..='cd ..'
alias ...='cd ../..'
# Common Commands
alias rm='rm -i'
alias mv='mv -iv'
alias cp='cp -iv'
alias ll='ls -lhGF'
alias la='ls -aGF'
# Net commands
alias ip='curl -s icanhazip.com'
alias unmount='hdiutil unmount'
alias grep='grep --color=auto'
alias update='brew update; brew upgrade; brew cleanup; gem update'
alias vim='mvim -v'
# Local aliases
[[ -s $HOME/.aliases.local ]] && source $HOME/.aliases.local
